<%= form_with(model:[:admin,category],local:true) do |f| %>
  <div class="row mb-3">
    <%= f.label :name, class: "col-sm-2 control-label font-weight-bold" %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: "カテゴリー名", class: "form-control" %>
      </div>
  </div>

  <div class="row mt-4 mb-4">
    <div class="col text-right">
      <%= f.submit :class =>"btn btn-info"%>
    </div>
  </div>
<% end %>