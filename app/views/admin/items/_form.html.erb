<%= form_with(model:[:admin,item],local:true) do |f| %>
  <%= f.attachment_field :item_image %>
  <div class="row pb-3">
    <%= f.label :brand_id, class: "col-sm-2 control-label font-weight-bold" %>
      <div class="col-sm-10">
        <%= f.collection_select :brand_id, Brand.all, :id, :name,{prompt: "選択してください"},class: "form-control text-muted" %>
      </div>
  </div>
  <div class="row pb-3">
    <%= f.label :category_id, class: "col-sm-2 control-label font-weight-bold" %>
      <div class="col-sm-10">
        <%= f.collection_select :category_id, Category.all, :id, :name,{prompt: "選択してください"},class: "form-control text-muted" %>
      </div>
  </div>
  <div class="row pb-3">
    <%= f.label :name, class: "col-sm-2 control-label font-weight-bold" %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
      </div>
  </div>
  <%= f.submit %>
<% end %>