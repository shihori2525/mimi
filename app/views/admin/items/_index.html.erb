<thead>
    <tr>
      <th>ブランド名</th>
      <th>カテゴリー名</th>
      <th>商品名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.brand.name %></td>
      <td><%= item.category.name %></td>

      <td>
      <%= link_to admin_item_path(item) do %>
        <%= item.name %>
      <% end %>
      </td>

      <td><%= link_to "編集",edit_admin_item_path(item),class: "btn btn-info" %></td>
      <td><%= link_to "削除",admin_item_path(item),class: "btn btn-danger",method: :delete,"data-confirm" => "本当に消しますか？" %></td>
    </tr>
    <% end %>
  </tbody>