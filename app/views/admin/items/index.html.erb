<%= render 'layouts/admin_header' %>
商品一覧
<%= link_to "商品登録",new_admin_item_path %>
<teble>
  <thead>
    <tr>
      <th>ブランド</th>
      <th>カテゴリー</th>
      <th>商品名</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.brand.name %></td>
      <td><%= item.category.name %></td>

      <td>
      <%= link_to admin_item_path(item) do %>
        <%= item.name %>
      <% end %>
      </td>

      <td><%= link_to "編集",edit_admin_item_path(item) %></td>
      <td><%= link_to "削除",admin_item_path(item) ,method: :delete,"data-confirm" => "本当に消しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</teble>