<%= render 'layouts/admin_header' %>
<div class="container col-sm-7 mt-4">
  <div id="notice"><%= flash[:notice] %></div>

  <div class="row ml-2">
    <%= @item.brand.name %>
  </div>

  <div class="row ml-2">
    <%= @item.category.name %>
  </div>

  <div class="row ml-2">
    <%= @item.name %>
  </div>

  <div class="row ml-2 mt-3">
    <%= attachment_image_tag @item, :item_image, format: 'jpeg', fallback: "no_image.jpg", size: "200x200" %>
  </div>

  <div class="row mt-3">
    <div class="col-sm-2">
      <%= link_to "編集",edit_admin_item_path(@item),class: "btn btn-info" %>
    </div>
    <div class="col-sm-2">
      <%= link_to "削除",admin_item_path(@item),class: "btn btn-danger" ,method: :delete,"data-confirm" => "本当に消しますか？" %>
    </div>
  </div>
</div>