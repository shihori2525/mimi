<%= render 'layouts/public_header' %>
プロフィール編集

<%= form_with model:@member,local:true do |f| %>
  プロフィール画像
  <%= f.attachment_field :profile_image %>
  <div class="row pb-3">
    <%= f.label :名前, class: "col-sm-2 control-label font-weight-bold" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>
  <div class="row pb-3">
    <%= f.label :自己紹介文, class: "col-sm-2 control-label font-weight-bold" %>
      <div class="col-sm-10">
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
  </div>
  <%= f.submit %>
<% end %>