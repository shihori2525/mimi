<%= render 'layouts/public_header' %>
<div class="container col-sm-8">
  <%= render 'layouts/errors' ,obj: @member %>
  <%= form_with model:@member,local:true do |f| %>
    <div class="row mt-4">
      <%= f.label :プロフィール画像,class: "col-sm-3 control-label" %>
    </div>
    <div class="row mb-3">
      <%= f.attachment_field :profile_image, class: "col-sm-5" %>
    </div>
    <div class="row mb-3">
      <%= f.label :名前, class: "col-sm-3 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    <div class="row mb-3">
      <%= f.label :自己紹介文, class: "col-sm-3 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
    </div>
    <div class="row mt-4 mb-4">
      <div class="col-sm-10 text-right">
        <%= f.submit :class=>"btn btn-info" %>
      </div>
  </div>
  <% end %>
</div>