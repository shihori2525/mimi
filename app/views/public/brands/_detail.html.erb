<% obj.items.each do |item| %>
  <tr>
    <td>
      <%= link_to item_path(item) do %>
       <%= attachment_image_tag item, :item_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
      <% end %>
    </td>
    <td>
      <%= link_to item_path(item) do %>
      <%= item.name %>
      <% end %>
    </td>
    <td>
      評価
    </td>
  </tr>
<% end %>