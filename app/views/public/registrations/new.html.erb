<%= render 'layouts/public_header' %>
<div id="alert"><%= flash[:alert] %></div>
<div class="container">
  <h5 class="d-flex align-items-center justify-content-center mt-4">新規登録</h5>

  <div class="d-flex align-items-center justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <table>
        <%= render "public/shared/error_messages", resource: resource %>

        <tr class="form-group row mb-4 mt-5">
          <td class="col-5"><%= f.label :名前 %></td>
          <td class="col-7"><%= f.text_field :name, autofocus: true %></td>
        </tr>

        <tr class="form-group row">
          <td class="col-5"><%= f.label :メールアドレス %>
          <td class="col-7"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr class="form-group row">
          <td class="col-5">
            <%= f.label :パスワード %><br>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </td>
          <td class="col-7"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr class="form-group row">
          <td class="col-5"><%= f.label :パスワード確認 %></td>
          <td class="col-7"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>

      <div class="form-group row">
        <div class="col-2 mx-auto">
          <%= f.submit "新規登録",class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
