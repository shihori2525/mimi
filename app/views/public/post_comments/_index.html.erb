<table>
  <% post.post_comments.each do |post_comment| %>
  <tr>
    <td>
      <%= attachment_image_tag post_comment.member, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
    </td>

    <td><%= post_comment.comment %></td>
    <% if post_comment.member == current_member %>
      <td><%= link_to "削除",post_post_comment_path(post, post_comment),method: :delete,remote: true,"data-confirm" => "本当に消しますか？" %></td>
    <% end %>
  </tr>
  <tr>
    <td>
      <%= link_to member_path(post.member) do %>
        <%= post_comment.member.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
