<% if item.item_favorited_by?(current_member) %>
  <%= link_to item_item_favorites_path(item),method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color:red;"></i>
  <% end %>
<% else %>
  <%= link_to item_item_favorites_path(item),method: :post, remote: true do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% end %>

